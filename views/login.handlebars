<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
</head>
<body>
    <div class="container">
        <div class="sign-up-box" style="text-align: center;">
            <h1>Sign Up</h1>
            <form>
                <div class="input-group">
                    <div class="input-field" id="nameBox">
                        {{!-- user icon --}}
                        <input type="text" placeholder="Name">
                    </div>
                    <div class="input-field" id="emailBox">
                        {{!-- email icon --}}
                        <input type="email" placeholder="Email">
                    </div>
                    <div class="input-field" id="passwordBox">
                        {{!-- lock icon --}}
                        <input type="password" placeholder="Password">
                    </div>
                </div>
                <div class="btn-container">
                    <button type="button" id="upBtn">Sign Up</button>
                    <button type="button" id="inBtn">Sign In</button>
                </div>
            </form>

        </div>
    </div>
    
    <script src="/public/js/login.js"></script>
</body>
</html>