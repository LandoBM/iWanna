
<div class="delete-prod">
<h1>Hi, {{name}}</h1>
{{#if products.length}}
{{#each products}}
<h1>Users Current Listed Items</h1>
{{!-- <h2>{{product_name}}</h2> --}}
<h2><a href="/product/{{product_id}}">{{product_name}}</a></h2>
 <button class="btn btn-sm btn-danger" data-id="{{id}}">DELETE</button>
{{/each}}

{{else}}
<p>this user has no listed items</p>
{{/if}}
</div>

<div>
<h1>Add New Product:</h1>
<form class="new-prod">
<div class"form-group">
<label for="prodName">item name:</label>
<input class="form-input" type="text" id="prodName" name="prodName" />
</div>

<div class="form-group">
        <label for="prodCond">condition:</label>
        <textarea class="form-input" type="text" id="prodCond" name="prodCond"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" data-id="{{id}}" class="btn btn-primary">Add</button>
      </div>

</form>
</div>


<script src="./js/product.js"></script>